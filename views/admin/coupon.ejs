<script>
    function generectcoupon() {
        const leters = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789'
        let copun = "AFLOZZ-"

        for (let i = 0; i < 5; i++) {

            const Index = Math.floor(Math.random() * leters.length)
            console.log(Index);
            copun += leters.charAt(Index)
        }

        document.getElementById("copunCode").value = copun
    }


    document.getElementById("dropdown-1").addEventListener("change", e => {

        const data = document.getElementById("dropdown-1").value

        if (data === "PercentageDiscountCoupons") {

            document.getElementById("type-label").innerText = "Percentage"

        }
    })

</script>