  <script>
       
       const form= document.getElementById("f-pass")
       form.addEventListener("submit",(e)=>{
        e.preventDefault()
        console.log("seet");

        const data = {}
            
            data.oldPassword = form.elements.oldPassword.value;
            if (data.oldPassword==="") {
              document.getElementById("pass-err").innerHTML = "Please choose a password"
              return false
            }else{
              document.getElementById("pass-err").innerHTML = ""

            }
            data.Password = form.elements.newPassword.value;
            if (data.Password==="") {
              document.getElementById("npass-err").innerHTML = "Please choose a password"
              return false
            }else{
              document.getElementById("npass-err").innerHTML = ""

            }
            if(form.elements.conPassword.value !== data.Password){
              document.getElementById("cpass-err").innerHTML = "Passwords do not match"
              return false
            }else{
              document.getElementById("cpass-err").innerHTML = "" 
            }
            console.log(data);
            document.getElementById("p-but").innerHTML = "change"

            fetch("/change/password", { method: "POST", body: new URLSearchParams(data) }).then(res => {
                if (res.status === 200) {
                  
                  document.getElementById("pass-err").innerHTML = ""
                  document.getElementById("p-but").classList.add("bg-green-600")
                  document.getElementById("p-but").innerHTML = "changed"


                }else{
                  
                  document.getElementById("pass-err").innerHTML = "Password is incorrect"
                  
                }

            })
       })

  </script>

